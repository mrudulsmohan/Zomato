pipeline {
    agent any

    environment {
        AWS_REGION  = "ap-south-1"
        EKS_CLUSTER = "zomato-cluster"
        IMAGE_NAME  = "mrudulsmohan/zomato-react"
        IMAGE_TAG   = "latest"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/mrudulsmohan/Zomato.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .'
            }
        }

        stage('Docker Login & Push') {
            steps {
                withCredentials([string(credentialsId: 'dockerhub-creds', variable: 'DOCKER_PASS')]) {
                    sh '''
                      echo "$DOCKER_PASS" | docker login -u mrudulsmohan --password-stdin
                      docker push ${IMAGE_NAME}:${IMAGE_TAG}
                    '''
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                withCredentials([
                    string(credentialsId: 'AWS_ACCESS_KEY_ID', variable: 'AWS_ACCESS_KEY_ID'),
                    string(credentialsId: 'AWS_SECRET_ACCESS_KEY', variable: 'AWS_SECRET_ACCESS_KEY')
                ]) {
                    sh '''
                      export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                      export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
                      export AWS_REGION=${AWS_REGION}

                      aws eks update-kubeconfig --region ${AWS_REGION} --name ${EKS_CLUSTER}

                      kubectl apply -f k8s/deployment.yaml --validate=false
                      kubectl apply -f k8s/service.yaml --validate=false

                      kubectl get pods
                      kubectl get svc
                    '''
                }
            }
        }
    }
}
