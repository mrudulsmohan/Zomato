pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')
        AWS_CREDENTIALS = credentials('aws-creds') // Add your AWS credentials here
        AWS_DEFAULT_REGION = 'ap-south-1'
        EKS_CLUSTER_NAME = 'zomato-cluster'
    }
    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t mrudulsmohan/zomato-react:latest .'
            }
        }

        stage('Docker Login') {
            steps {
                sh """
                echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                """
            }
        }

        stage('Push Image') {
            steps {
                sh 'docker push mrudulsmohan/zomato-react:latest'
            }
        }

        stage('Configure kubeconfig') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-creds'
                ]]) {
                    sh """
                    aws eks update-kubeconfig --region $AWS_DEFAULT_REGION --name $EKS_CLUSTER_NAME
                    """
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                // Use the same AWS credentials for kubectl
                withEnv([
                    "AWS_ACCESS_KEY_ID=${AWS_CREDENTIALS_USR}",
                    "AWS_SECRET_ACCESS_KEY=${AWS_CREDENTIALS_PSW}",
                    "AWS_DEFAULT_REGION=${AWS_DEFAULT_REGION}"
                ]) {
                    sh 'kubectl apply -f k8s/deployment.yaml'
                }
            }
        }
    }
}
